<!DOCTYPE html>
<html>
<head>
  <title>Blog App</title>
  <link rel="stylesheet" href="/index.css">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
  <header>
    <h1>Blog App</h1>
    <a href="/create" class="btn">Create New Post</a>
  </header>
  <main>
    <div class="card-container">
      <% posts.forEach(post => { %>
        <div class="card">
          <h2><%= post.title %></h2>
          <p><%= post.content %></p>
          <a href="/details/<%= posts.indexOf(post) %>" class="btn">View Details</a>
        </div>
      <% }) %>
    </div>
  </main>
</body>
</html>